<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_board_description">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/item_board_description_rl_p"
        android:id="@+id/relativeLayoutBoardDescription"
        android:background="@color/colorWhite">
        <ViewSwitcher
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/switcherBoardDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/boardDescription"
                android:textSize="@dimen/item_board_description_tv_ts"
                android:textColor="@color/colorBlack"
                android:paddingBottom="@dimen/item_board_description_tv_pb"
                android:paddingLeft="@dimen/item_board_description_tv_pl"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_remove_underbar"
                android:id="@+id/editBoardDescription"
                android:textSize="@dimen/item_board_description_tv_ts"
                android:textColor="@color/colorBlack"
                android:paddingBottom="@dimen/item_board_description_tv_pb"
                android:paddingLeft="@dimen/item_board_description_tv_pl"/>
        </ViewSwitcher>
    </RelativeLayout>
</LinearLayout>