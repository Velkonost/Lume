<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_contact_block">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewContact"
        card:cardUseCompatPadding="true"
        card:cardBackgroundColor="@color/colorWhite"
        card:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:id="@+id/relativeLayoutContact"
            android:onClick="openUserProfile">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/userAvatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:textSize="10pt"
                android:textColor="@color/colorBlack"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:layout_alignTop="@+id/userAvatar"
                android:layout_toEndOf="@+id/userAvatar"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userLogin"
                android:textSize="10pt"
                android:layout_alignTop="@+id/userAvatar"
                android:layout_toEndOf="@+id/userName"
                android:layout_marginStart="34dp"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/userWithoutName"
                android:layout_toEndOf="@+id/userName"
                android:layout_alignTop="@+id/userName"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        android:id="@+id/blackLine"/>
</LinearLayout>