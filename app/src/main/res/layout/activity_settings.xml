<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:card_view="http://schemas.android.com/tools"
                                        android:id="@+id/activity_settings"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/mainBackground"
                                        android:fitsSystemWindows="true">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_layover_bg">

            <FrameLayout
                android:id="@+id/toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

            </FrameLayout>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llsettings"
            android:orientation="vertical"
            app:layout_anchor="@id/appbarlayout"
            app:layout_anchorGravity="bottom">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                android:layout_marginTop="@dimen/card_margin_horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:id="@+id/avatar"
                        android:contentDescription="Image avatar"
                        android:layout_margin="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/avatar"
                        android:textAlignment="center"
                        android:id="@+id/login"
                        android:textSize="24sp"
                        android:textColor="@color/colorBlack"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="-4dp"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:id="@+id/div_personal_header">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Личная информация"
                            android:background="@color/colorWhite"
                            android:padding="10dp"
                            android:id="@+id/personalInfo"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textSize="15sp"
                            android:layout_marginLeft="12dp"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_arrow_personal"
                            android:src="@mipmap/ic_chevron_down"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:id="@+id/div_personal"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/editName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editName"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_surname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/editSurname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editSurname" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/editBirthday"
                                    android:onClick="chooseDate"
                                    android:textColor="@color/colorBlack"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:focusable="false"
                                    android:layout_weight="1"
                                    android:hint="@string/editBirthday"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editCity"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_weight="1"
                                    android:hint="@string/editCity"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editCountry"
                                    android:layout_weight="1"
                                    android:hint="@string/editCountry"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_study"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editStudy"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_weight="1"
                                    android:hint="@string/editStudy"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editWork"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editWork"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorGrey"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                android:layout_marginTop="-4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/div_account_header">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Учетная запись"
                        android:background="@color/colorWhite"
                        android:padding="10dp"
                        android:layout_weight="1"
                        android:textSize="15sp"
                        android:id="@+id/accountInfo"
                        android:layout_gravity="center"
                        android:layout_marginLeft="12dp"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_arrow_account"
                        android:src="@mipmap/ic_chevron_down"
                        android:layout_gravity="center"
                        android:layout_marginRight="12dp"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:id="@+id/div_account"
                        android:paddingBottom="5dp"
                        android:paddingTop="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_prev_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword"
                                    android:id="@+id/prevPassword"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editPrevPassword"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_new_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword"
                                    android:id="@+id/newPassword"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editNewPassword"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                            <android.support.v7.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textEmailAddress"
                                android:id="@+id/editEmail"
                                android:layout_weight="1"
                                android:lines="1"
                                android:textCursorDrawable="@null"
                                android:background="@drawable/edittext_remove_underbar"
                                android:hint="@string/editEmail"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_work_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textEmailAddress"
                                    android:id="@+id/editWorkEmail"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editWorkEmail"/>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        </ScrollView>

        <com.eyalbira.loadingdots.LoadingDots
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingDots"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@color/colorPrimary"
            app:LoadingDots_dots_count="5"
            app:LoadingDots_dots_size="16dp"
            app:LoadingDots_dots_space="5dp"
            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100"
            app:LoadingDots_jump_duration="200"
            app:LoadingDots_jump_height="14dp"
            android:layout_gravity="center"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"
        app:headerLayout="@layout/navigation_header"/>

</android.support.v4.widget.DrawerLayout>