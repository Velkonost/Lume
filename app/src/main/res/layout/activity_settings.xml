<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                        xmlns:app="http://schemas.android.com/apk/res-auto"
                                        xmlns:card_view="http://schemas.android.com/tools"
                                        android:id="@+id/activity_settings"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:background="@color/mainBackground"
                                        android:fitsSystemWindows="true">
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.design.widget.AppBarLayout
            android:id="@+id/appbarlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/search_layover_bg">

            <FrameLayout
                android:id="@+id/toolbar_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@color/colorPrimary"
                    android:theme="@style/ThemeOverlay.AppCompat.Dark"/>

            </FrameLayout>
        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/llsettings"
            android:orientation="vertical"
            app:layout_anchor="@id/appbarlayout"
            app:layout_anchorGravity="bottom">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                android:layout_marginTop="@dimen/card_margin_horizontal">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/settings_info_div_p">
                    <ImageView
                        android:layout_width="@dimen/settings_avatar_width"
                        android:layout_height="@dimen/settings_avatar_height"
                        android:id="@+id/avatar"
                        android:contentDescription="Image avatar"
                        android:layout_margin="@dimen/settings_avatar_m"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/avatar"
                        android:textAlignment="center"
                        android:id="@+id/login"
                        android:textSize="@dimen/settings_login_ts"
                        android:textColor="@color/colorBlack"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginTop="@dimen/settings_personal_div_cv_mt"
                android:layout_marginBottom="@dimen/settings_personal_div_cv_mb"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/settings_personal_div_header_height"
                        android:id="@+id/div_personal_header">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/settings_personal_information"
                            android:background="@color/colorWhite"
                            android:padding="@dimen/settings_personal_info_p"
                            android:id="@+id/personalInfo"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            android:textSize="@dimen/settings_personal_info_ts"
                            android:layout_marginLeft="@dimen/settings_personal_info_ml"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/image_arrow_personal"
                            android:src="@mipmap/ic_chevron_down"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/settings_personal_image_mr"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/settings_personal_div_pr"
                        android:paddingLeft="@dimen/settings_personal_div_pl"
                        android:id="@+id/div_personal"
                        android:paddingBottom="@dimen/settings_personal_div_pb"
                        android:paddingTop="@dimen/settings_personal_div_pt">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/editName"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editName"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_surname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatEditText
                                    android:id="@+id/editSurname"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editSurname" />
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_birthday"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">

                                <EditText
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/editBirthday"
                                    android:onClick="chooseDate"
                                    android:textColor="@color/colorBlack"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:focusable="false"
                                    android:layout_weight="1"
                                    android:hint="@string/editBirthday"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_city"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editCity"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_weight="1"
                                    android:hint="@string/editCity"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_country"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editCountry"
                                    android:layout_weight="1"
                                    android:hint="@string/editCountry"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_study"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editStudy"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:layout_weight="1"
                                    android:hint="@string/editStudy"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_work"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:id="@+id/editWork"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editWork"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/line_height"
                android:background="@color/colorGrey"/>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardPreventCornerOverlap="false"
                card_view:cardUseCompatPadding="true"
                android:layout_marginLeft="@dimen/card_margin_horizontal"
                android:layout_marginRight="@dimen/card_margin_horizontal"
                android:layout_marginTop="@dimen/settings_account_div_cv_pt">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/settings_account_div_header_height"
                    android:id="@+id/div_account_header">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/settings_account_information"
                        android:background="@color/colorWhite"
                        android:padding="@dimen/settings_account_info_p"
                        android:layout_weight="1"
                        android:textSize="@dimen/settings_account_info_ts"
                        android:id="@+id/accountInfo"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/settings_account_info_ml"/>
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/image_arrow_account"
                        android:src="@mipmap/ic_chevron_down"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/settings_account_image_mr"/>

                </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingRight="@dimen/settings_account_div_pr"
                        android:paddingLeft="@dimen/settings_account_div_pl"
                        android:id="@+id/div_account"
                        android:paddingBottom="@dimen/settings_account_div_pb"
                        android:paddingTop="@dimen/settings_account_div_pt">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_prev_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword"
                                    android:id="@+id/prevPassword"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editPrevPassword"/>
                            </android.support.design.widget.TextInputLayout>
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_new_password"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textPassword"
                                    android:id="@+id/newPassword"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editNewPassword"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">

                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                            <android.support.v7.widget.AppCompatEditText
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textEmailAddress"
                                android:id="@+id/editEmail"
                                android:layout_weight="1"
                                android:lines="1"
                                android:textCursorDrawable="@null"
                                android:background="@drawable/edittext_remove_underbar"
                                android:hint="@string/editEmail"/>
                            </android.support.design.widget.TextInputLayout>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:baselineAligned="false">
                            <android.support.design.widget.TextInputLayout
                                android:id="@+id/input_layout_work_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout"
                                android:layout_weight="1">
                                <android.support.v7.widget.AppCompatEditText
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="textEmailAddress"
                                    android:id="@+id/editWorkEmail"
                                    android:layout_weight="1"
                                    android:lines="1"
                                    android:textCursorDrawable="@null"
                                    android:background="@drawable/edittext_remove_underbar"
                                    android:hint="@string/editWorkEmail"/>
                            </android.support.design.widget.TextInputLayout>

                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        </ScrollView>

        <com.eyalbira.loadingdots.LoadingDots
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/loadingDots"
            app:LoadingDots_auto_play="true"
            app:LoadingDots_dots_color="@color/colorPrimary"
            app:LoadingDots_dots_count="5"
            app:LoadingDots_dots_size="@dimen/loading_dots_size"
            app:LoadingDots_dots_space="@dimen/loading_dots_space"
            app:LoadingDots_loop_duration="800"
            app:LoadingDots_loop_start_delay="100"
            app:LoadingDots_jump_duration="200"
            app:LoadingDots_jump_height="@dimen/loading_dots_jump_height"
            android:layout_gravity="center"/>
    </android.support.design.widget.CoordinatorLayout>

    <android.support.design.widget.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/menu_navigation"
        app:headerLayout="@layout/navigation_header"/>

</android.support.v4.widget.DrawerLayout>