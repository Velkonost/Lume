<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:card_view="http://schemas.android.com/tools"
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    card_view:cardPreventCornerOverlap="false"
                                    card_view:cardUseCompatPadding="true"
                                    android:layout_marginLeft="@dimen/card_margin_horizontal"
                                    android:layout_marginRight="@dimen/card_margin_horizontal"
                                    android:layout_marginTop="@dimen/card_margin_horizontal">
    <GridView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:scrollbars="none"
        android:id="@+id/gridColumns"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/noColumns"
        android:visibility="invisible"
        android:padding="16dp"
        android:background="@drawable/grid_item_column"
        android:onClick="addColumnOnClick"
        android:text="@string/no_columns_message"/>

</android.support.v7.widget.CardView>