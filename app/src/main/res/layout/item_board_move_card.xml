<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_contact_block">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_board_move_ll_height"
        android:orientation="horizontal"
        android:id="@+id/relativeLayoutContact"
        android:background="@drawable/selector_item_board_invite"
        android:clickable="true">
        <ru.velkonost.lume.patterns.ScrollingTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userName"
            android:textSize="@dimen/item_board_move_name_ts"
            android:layout_marginLeft="@dimen/item_board_move_name_ml"
            android:layout_marginBottom="@dimen/item_board_move_name_mb"
            android:layout_marginTop="@dimen/item_board_move_name_mt"
            android:layout_marginRight="@dimen/item_board_move_name_mr"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:lines="1"/>
    </LinearLayout>


</LinearLayout>