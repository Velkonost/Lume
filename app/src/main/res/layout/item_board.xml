<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_board">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_board_rl_height"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/item_board_rl_pl"
        android:paddingRight="@dimen/item_board_rl_pr"
        android:id="@+id/relativeLayoutBoard"
        android:background="@drawable/selector_item"
        android:clickable="true">
        <ru.velkonost.lume.patterns.ScrollingTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/boardName"
            android:textSize="@dimen/item_board_name_ts"
            android:textColor="@color/colorBlack"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:lines="1"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/line_height"
        android:layout_marginLeft="@dimen/item_board_line_ml"
        android:layout_marginRight="@dimen/item_board_line_mr"
        android:background="@color/colorLightGrey"/>

</LinearLayout>