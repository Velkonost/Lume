<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res-auto"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:id="@+id/item_profile_interaction">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewUserInteraction"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true"
        card:cardBackgroundColor="@color/colorWhite"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:id="@+id/linearLayoutUserInteraction">

           <Button
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:id="@+id/btnAddToContacts"
               android:layout_weight="1"
               android:padding="3dp"
               android:background="@drawable/roundcorner"
               android:layout_margin="5dp"
               android:text="@string/user_add_into_contacts"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnSendMessage"
                android:layout_weight="5"
                android:background="@drawable/roundcorner"
                android:layout_margin="5dp"
                android:text="@string/user_send_message"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>