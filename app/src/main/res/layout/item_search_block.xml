<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/item_search_block">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_search_height"
        android:orientation="horizontal"
        android:id="@+id/relativeLayoutSearch"
        android:background="@drawable/selector_item"
        android:clickable="true">

            <ImageView
                android:layout_width="@dimen/item_search_avatar_width"
                android:layout_height="@dimen/item_search_avatar_height"
                android:id="@+id/userAvatar"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/item_search_avatar_ml"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/item_search_ll_ml"
                android:layout_marginRight="@dimen/item_search_ll_mr"
                android:layout_gravity="center">
                <ru.velkonost.lume.patterns.ScrollingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/userName"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/item_search_name_ts"
                    android:layout_marginBottom="@dimen/item_search_name_mb"
                    android:lines="1"/>
                <ru.velkonost.lume.patterns.ScrollingTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/userLogin"
                    android:layout_marginBottom="@dimen/item_search_login_mb"
                    android:lines="1"/>
                <ru.velkonost.lume.patterns.ScrollingTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/livingPlace"
                    android:textSize="@dimen/item_search_living_place_ts"
                    android:lines="1"/>
            </LinearLayout>

        </LinearLayout>


</LinearLayout>