<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="5dp"
              android:layout_marginBottom="5dp"
              android:layout_marginLeft="12dp"
              android:layout_marginRight="12dp"
              android:id="@+id/item_search_block">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardViewSearch"
        card:cardElevation="2dp"
        card:cardUseCompatPadding="true"
        card:cardBackgroundColor="@color/colorWhite"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:id="@+id/relativeLayoutSearch"
            android:onClick="openUserProfile">


            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="left"
                android:id="@+id/userAvatar"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userName"
                android:textSize="10pt"
                android:textColor="@color/colorBlack"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:text="Test Testovich"
                android:layout_alignTop="@+id/userAvatar"
                android:layout_toEndOf="@+id/userAvatar"/>
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/userWithoutName"
                android:layout_above="@+id/userDescription"
                android:layout_toEndOf="@+id/userName"
                android:layout_alignTop="@+id/userName"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:id="@+id/userDescription"
                android:layout_below="@+id/userName"
                android:layout_toEndOf="@+id/userAvatar">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/livingPlace"
                    android:text="Russia, Omsk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/workingPlace"
                    android:text="School 92"/>
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>